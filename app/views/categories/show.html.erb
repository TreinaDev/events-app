<h1><%= @category.name %></h1>

<% if Keyword.all.length == 0 %>
  <h2 class="mt-10 font-bold text-lg text-textPrimary">Não há palavras-chave disponíveis para associar.</h2>
<% else %>
  <h2 class="mt-10 font-bold text-lg text-textPrimary">Palavras-chave disponíveis</h2>

  <%= form_with model: @category do |f| %>
    <div class="form">
      <div class="input_container">
        <%= f.collection_checkboxes :keyword_ids, Keyword.all, :id, :value do |box| %>
          <div class="flex items-center gap-2">
            <%= box.check_box class: "h-5 w-5 text-primary" %>
            <%= box.label %>
          </div>
        <% end %>
      </div>

      <%= f.submit 'Atualizar', class: 'form_button' %>
    </div>
  <% end %>
<% end %>
