<% if @event.logo.attached? %>
  <%= image_tag url_for(@event.logo) %>
<% end %>

<% if @event.schedule.nil? %>
  <%= link_to 'Agenda', new_event_schedule_path(@event) %>
<% else %>
  <%= link_to 'Agenda', event_schedule_path(@event, @event.schedule) %>
<% end %>

<div class="flex gap-4">
  <p class="font-bold"><%= @event.name %></p>
  <p><%= Event.human_enum_name(:status, @event.status) %></p>
</div>


<%= render layout: 'layouts/action_text/contents/content' do %>
  <%= @event.description %>
<% end %>

<% if @event.draft? %>
  <%= button_to 'Publicar', publish_event_path(@event), method: :patch %>
<% end %>