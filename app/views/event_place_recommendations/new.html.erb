<%= form_with model: @event_place_recommendation do |f| %>
  <div class="form">
    <div class="input_container">
      <%= f.label :name, class: 'input_label' %>
      <%= f.text_field :name, class: "input" %>
      <% if @event_place_recommendation.errors[:name].any? %>
        <% @event_place_recommendation.errors.full_messages_for(:name).each do |e| %>
          <span class="form_error"><%= e %></span>
        <% end %>
      <% end %>
    </div>

    <div class="input_container">
      <%= f.label :full_address, class: 'input_label' %>
      <%= f.text_field :full_address, class: "input" %>
      <% if @event_place_recommendation.errors[:full_address].any? %>
        <% @event_place_recommendation.errors.full_messages_for(:full_address).each do |e| %>
          <span class="form_error"><%= e %></span>
        <% end %>
      <% end %>
    </div>

    <div class="input_container">
      <%= f.label :phone, class: 'input_label' %>
      <%= f.text_field :phone, class: "input" %>
      <% if @event_place_recommendation.errors[:phone].any? %>
        <% @event_place_recommendation.errors.full_messages_for(:phone).each do |e| %>
          <span class="form_error"><%= e %></span>
        <% end %>
      <% end %>
    </div>

    <%= f.submit "#{@event_place_recommendation.new_record? ? 'Cadastrar' : 'Atualizar'}", class: 'form_button' %>
  </div>
<% end %>